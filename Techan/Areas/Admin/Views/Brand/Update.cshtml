@using Techan.ViewModels.Brand
@model BrandUpdateVM
<section class="content-main">
	<div class="content-header">
		<h2 class="content-title">Update Brand</h2>
		<div>
			<a asp-action="Index" class="btn btn-md rounded font-sm hover-up">Go to list</a>
		</div>
	</div>
	<div class="card mb-4">
		<form method="post" class="card-body">
			<div class="mb-4">
				<img src="@Model.ImagePath" width="60" />
				<label asp-for="Image" class="form-label"></label>
				<input asp-for="Image" class="form-control">
				<span class="text-sm text-danger" asp-validation-for="Image"></span>
			</div>
			<div class="row gx-3">
				<div class="col-md-4  mb-3">
					<label asp-for="Name" class="form-label"></label>
					<input asp-for="Name" class="form-control">
					<span class="text-sm text-danger" asp-validation-for="Name"></span>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Update</button>
		</form>
	</div>
</section>